# DDM Racing System Environment Configuration
# Copy this to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here
PORT=5000

# Database Configuration (future)
DATABASE_URL=sqlite:///ddm_racing.db

# ESP32 Configuration
ESP32_NETWORK_RANGE=192.168.1.0/24
ESP32_DISCOVERY_PORT=8080
ESP32_COMMAND_TIMEOUT=5

# WebSocket Configuration
SOCKETIO_CORS_ALLOWED_ORIGINS=*
SOCKETIO_LOGGER=True

# Security Configuration
ADMIN_PASSWORD=admin123
SESSION_TIMEOUT=3600

# LED Configuration
DEFAULT_LED_COUNT=50
DEFAULT_BRIGHTNESS=128
DEFAULT_COLOR_ORDER=RGB

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ddm_racing.log
